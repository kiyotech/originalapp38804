<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      今日釣れた場所を教わろう
    </h2>
    <p class='service-explain'>
      明日も釣れるかも！？
    </p>

  </div>
  <%# /画面上部の帯部分  %>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>釣果一覧</h2>
    <ul class='item-lists'>
      <%= render partial: 'resume', collection: @resumes %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= link_to(new_resume_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'fishing_bass.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>